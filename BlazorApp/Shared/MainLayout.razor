@using BlazorApp.Store
@inherits LayoutComponentBase
@inject AppState AppState

<PageTitle>KontoApp</PageTitle>
<MudThemeProvider IsDarkMode="true" Theme="_myCustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Elevation="1">
        <MudGrid>
            <MudItem sm="4">
                <MudText Align="Align.Center"></MudText>
            </MudItem>
            <MudItem sm="4">
                <MudText Align="Align.Center" Typo="Typo.h3">@AppState.GetNameString()</MudText>
            </MudItem>
            <MudItem sm="4">
                <MudText Align="Align.Center"></MudText>
            </MudItem>
        </MudGrid>
    </MudAppBar>
    <MudMainContent >
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    MudTheme _myCustomTheme = new()
    {
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Fjalla One", "Helvetica", "Arial", "sans-serif" }
            }
        }
    };
}