@using BlazorApp.Store
@using MudBlazor.Utilities
@inherits LayoutComponentBase
@inject AppState AppState

<PageTitle>KontoApp</PageTitle>
<MudThemeProvider IsDarkMode="true" Theme="_myCustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Elevation="1">
        <MudGrid>
            <MudItem sm="4">
                <MudText Align="Align.Center"></MudText>
            </MudItem>
            <MudItem sm="4">
                <MudText Align="Align.Center" Typo="Typo.h3">@AppState.GetNameString()</MudText>
            </MudItem>
            <MudItem sm="4">
                <MudText Align="Align.Center"></MudText>
            </MudItem>
        </MudGrid>
    </MudAppBar>
    <MudMainContent Class="">
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    MudTheme _myCustomTheme = new()
    {
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] {"Fjalla One", "Helvetica", "Arial", "sans-serif"},
            },
            Subtitle1 = new Subtitle1()
            {
                FontFamily = new[] {"Bangers"},
                FontSize = "2rem"
            },
            Subtitle2 = new Subtitle2()
            {
                FontFamily = new[] {"Bangers"},
                FontSize = "1.5rem"
            }
        },
        PaletteDark = new PaletteDark()
        {
            Background = "rgba(18,18,18,1)",
            AppbarBackground = "rgba(18,18,18,1)",
            TextPrimary = "#FFFFFF",
            AppbarText = "#FFFFFF",
            Primary = "#8960c3"
        }
    };

}