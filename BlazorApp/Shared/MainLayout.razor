@inherits LayoutComponentBase

<PageTitle>BlazorApp</PageTitle>
<MudThemeProvider IsDarkMode="true" Theme="_myCustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudMainContent >
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    MudTheme _myCustomTheme = new()
    {
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Fjalla One", "Helvetica", "Arial", "sans-serif" }
            }
        }
    };
}